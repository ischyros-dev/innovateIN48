{
  "openapi": "3.0.0",
  "info": {
    "description": "innovateIN48",
    "version": "1.0.0",
    "title": "Bank Transaction API"
  },
  "tags": {
    "name": "Service API",
    "description": "Bank transaction services."
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Service API"
        ],
        "summary": "Establish session for required transaction",
        "requestBody": {
          "description": "User credentials for the required session",
          "content": {
            "application/json": {
              "schema": {
                "userid": {
                  "type": "string",
                  "format": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Valid credentials. Use authentication key to execute transactions.",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "token": "string",
                    "format": "byte"
                  }
                },
                "example": {
                  "token": "api_key"
                }
              }
            }
          },
          "403": {
            "description": "Invalid credentials. No transactions allowed."
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "Service API"
        ],
        "summary": "Terminates established session",
        "parameters": [
          {
            "name": "userid",
            "in": "query",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Session terminated."
          },
          "401": {
            "description": "Non-existing session."
          }
        }
      }
    }
  }
}
